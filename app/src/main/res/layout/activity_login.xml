<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.connexion.LoginActivity"
    android:orientation="vertical"
    >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints,ScrollViewCount,UselessParent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bird_stagram"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="normal"
                android:paddingTop="40dp"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:src="@drawable/connexion_oiseau"
                android:contentDescription="@string/connexion_image"
                android:layout_gravity="center"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="25sp"
                    />

                <EditText
                    android:id="@+id/email_connexion"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="Email"
                    android:inputType="textEmailAddress"
                    tools:ignore="LabelFor"
                    />

            </LinearLayout>


            <LinearLayout
                android:paddingTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mot_de_passe"
                    android:textSize="25sp"
                    />

                <EditText
                    android:id="@+id/password_connexion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="Email"
                    android:inputType="textPassword"
                    tools:ignore="LabelFor"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/button_connexion"
                android:layout_width="218dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/log_in"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="60sp"
                    android:text="@string/vous_n_avez_pas_de_compte"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/button_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_er_un_compte"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>