<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SettingActivity">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications :"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        android:layout_marginTop="40dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"/>

    <Switch
        android:id="@+id/allNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print notifications"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/notifications"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="100dp"
        android:textStyle="bold" />


    <Switch
        android:id="@+id/generalNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/allNotif"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="100dp"/>

    <Switch
        android:id="@+id/socialNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/generalNotif"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="100dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>